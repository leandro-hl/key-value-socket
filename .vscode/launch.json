  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm test",
      "name": "Run npm test",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Nodemon + TS",
      "restart": true,
      "sourceMaps": true,
      "protocol": "auto",
      "port": 9230,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Nodemon + TS + Docker",
      "restart": true,
      "sourceMaps": true,
      "protocol": "auto",
      "port": 9230,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app"
    }
  ]
}
